<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/hello"
    />
    
    
    
    <LinearLayout android:layout_height="wrap_content"
		android:layout_width="match_parent" android:id="@+id/buttonsLayout"
		android:paddingBottom="20px" android:layout_alignParentBottom="true">
		<Button android:id="@+id/startAndbind" android:layout_height="wrap_content"
			android:layout_marginLeft="5px" android:text="startAndbind"
			android:layout_width="wrap_content"></Button>
		<Button android:id="@+id/nativeCrash" android:layout_height="wrap_content"
			android:layout_marginLeft="5px" android:text="nativeCrash"
			android:layout_width="wrap_content"></Button>
		<Button android:id="@+id/unbind" android:layout_height="wrap_content"
			android:layout_marginLeft="5px" android:text="unbind"
			android:layout_width="wrap_content"></Button>
		<Button android:id="@+id/bind" android:layout_height="wrap_content"
			android:layout_marginLeft="5px" android:text="bind"
			android:layout_width="wrap_content"></Button>
	</LinearLayout>
</LinearLayout>
